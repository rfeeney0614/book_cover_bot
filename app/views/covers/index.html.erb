<h2>Covers</h2>
<table
  data-toggle="table"
  data-pagination="true"
  data-search="true"
  data-show-columns="true"
  data-multiple-select-row="true"
  data-click-to-select="true">
  <thead>
    <tr>
      <th data-field="state" data-checkbox="true"></th>
      <th data-field="book" data-sortable="true">Book</th>
      <th data-field="edition" data-sortable="true">Edition </th>
      <th data-field="format" data-sortable="true">Format </th>
      <th>Image </th>
    </tr>
  </thead>
  <tbody>
   <% @covers.each do |cover| %>
    <tr>
      <td></td>
      <td><%= cover.book.title%></td>
      <td><%= cover.edition%></td>
      <td><%=cover.format %></td>
      <td>
        <%= link_to image_tag(cover.image.variant(:thumb)), rails_blob_path(cover.image, disposition: 'attachment') %>
      </td>
    </tr>
    <% end %>
  </tbody>
 </table>
