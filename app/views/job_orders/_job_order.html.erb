<tr id="<%= dom_id job_order %>" class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
  <td scope="col" class="px-6 py-3"><%= job_order.cover.book.title%></td>
  <td scope="col" class="px-4 py-3"><%= job_order.cover.edition%></td>
  <td scope="col" class="px-4 py-3"><%=job_order.cover.format %></td>
  <td scope="col" class="px-4 py-3">
    <%= link_to image_tag(job_order.cover.image.variant(:thumb)), rails_blob_path(job_order.cover.image, disposition: 'attachment') %>
  </td>
  <td class="px-6 py-4">
    <div class="flex items-center">
      <%= form_tag remove_from_job_cover_path(cover), method: :patch do %>
          <%= button_tag class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800", type: "submit", data: { confirm: "Are you sure?" } do %>
                -
          <% end %>
      <% end %>
        <div class="px-3 py-4">
          <%=job_order.cover.job_count %>
        </div>
        <%= form_tag add_to_job_cover_path(cover), method: :patch do %>
            <%= button_tag class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800", type: "submit", data: { confirm: "Are you sure?" } do %>
                  +
            <% end %>
        <% end %>
    </div>
  </td>
</tr>
