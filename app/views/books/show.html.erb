<h1 class="text-3xl font-bold underline">
    <%= @book.title %>
</h1>
<br>
<p>Author: <%= @book.author %></p>
<br>
<p>Page Count: <%= @book.page_count %></p>
<br>
<h2>Note:</h2>
<p><%= @book.note %></p>
<br>
<%= render partial: "covers/covers", locals: {covers: @book.covers, show_page_count: false} %>
<div class="h-40 w-1/2 grid grid-cols-1 gap-1 content-evenly">
  <%= link_to "New Cover", new_book_cover_path(@book), class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
  <%= link_to "Edit", edit_book_path(@book), class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
  <%= link_to "Destroy", book_path(@book), data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                }, class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                </div>
