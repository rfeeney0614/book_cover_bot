<h1><%= @book.title %></h1>
<br>
<p>Author: <%= @book.author %></p>
<br>
<p>Page Count: <%= @book.page_count %></p>
<br>
<h2>Note:</h2>
<p><%= @book.note %></p>
<br>
<%= render partial: "covers/covers", locals: {covers: @book.covers} %>

<ul>
  <li><%= link_to "New Cover", new_book_cover_path(@book) %></li>
  <li><%= link_to "Edit", edit_book_path(@book) %></li>
  <li><%= link_to "Destroy", book_path(@book), data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %></li>
</ul>
